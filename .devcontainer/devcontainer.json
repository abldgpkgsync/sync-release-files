{
  "$schema": "./devct_schema.json",
  "name": "UBUNTU24.04",
  "image": "docker.io/ubuntu:24.04",
  "postCreateCommand": "bash -x .dev*/init_devct.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/root/mywksp,type=bind",
  "workspaceFolder": "/root/mywksp",
  "remoteUser": "root",
  "runArgs": [
    // only-for-nivida-container-runtime
    // "--gpus=all",
    // "--shm-size=16g",
    "--privileged",
    "--name=ldgdevct",
    "--hostname=ldgdevct",
    "--network=host",
    "--dns=114.114.114.114"
  ],
  // 10. 可选：VS Code 自定义配置（插件、设置等）
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        // "dbaeumer.vscode-eslint",
        // "ms-python.python",
        // "ms-vscode.cpptools",
        // "ms-python.vscode-pylance",
        // "ms-python.python",
        "EditorConfig.EditorConfig",
        "kennylong.kubernetes-yaml-formatter",
        "geeebe.duplicate",
        "mkhl.shfmt"
      ]
    }
  }
}
